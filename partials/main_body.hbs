<div id="ub-main" class="ub-frontpage" role="main">
  <div class="row">
    <div class="large-12 columns">
      {{#foreach posts}}
        <article class="{{post_class}} ub-block">

          <div class="row ub-post-header">
            {{#if featured}}
              <div class="large-1 columns">
                  <span class="ub-featured-post">
                    <span class="fa fa-asterisk"></span>
                  </span>
              </div>
            {{/if}}
            <div class="{{#if featured}}large-11{{else}}large-12{{/if}} columns">
                <h2 class="ub-post-title"><a href="{{url}}">{{{title}}}</a></h2>
            </div>
          </div>

          <div class="row">
            <div class="ub-post-excerpt">
              <p><a href="{{url}}">{{content words="0"}}</a></p>
              <p>{{excerpt characters="350"}}&hellip;</p>
            </div>
          </div>

          <div class="row">
            <div class="ub-post-meta">
              <div class="row">
                <div class="small-4 large-4 columns bar">
                  <time class="ub-post-time" datetime="{{date format='MM-DD-YYYY'}}"><span class="fa fa-calendar"></span> {{date format="DD MMM YYYY"}}</time>
                </div>
                <div class="small-4 large-4 columns bar">
                  <span class="ub-post-tags">{{#if tags}}<span class="fa fa-tags"></span>{{/if}} {{tags}}</span>
                </div>
                <div class="small-4 large-4 columns small-text-center">
                  <a href="{{url}}" class="button radius tiny readme">Read More</a>
                </div>
              </div>
            </div>
          </div>

        </article>
      {{/foreach}}
    </div>
  </div>
</div>

{{! Pagination }}
{{pagination}}