<div id="ub-pagination">

  <div class="row">
    <div class="large-4 small-3 columns text-left">
      <div class="ub-block">
        {{#if prev}}
          <a class="ub-pagination-item ub-newer-posts" href="{{page_url prev}}">
            <span class="fa fa-arrow-circle-o-left"></span>
            <span class="hide-for-small-only">Newer Posts</span>
          </a>
        {{/if}}
      </div>
    </div>
    <div class="large-4 small-6 columns text-center">
      <div class="ub-block">
        <span class="ub-pagination-item ub-page-number">Page {{page}} of {{pages}}</span>
      </div>
    </div>
    <div class="large-4 small-3 columns text-right">
      <div class="ub-block">
        {{#if next}}
          <a class="ub-pagination-item ub-older-posts" href="{{page_url next}}">
            <span class="hide-for-small-only">Older Posts</span>
            <span class="fa fa-arrow-circle-o-right"></span>
          </a>
        {{/if}}
      </div>
    </div>
  </div>

</div>